#!/bin/sh

if [ "$help" != "1" ]
then

	pkg-config --exists sdl > /dev/null 2>&1
	disable_sdl=$?

	if [ "$disable_sdl" = "0" ]
	then
		echo > config.mak
		image=`pkg-config --variable=prefix sdl`/include/SDL/SDL_image.h
		if [ -f "$image" ]
		then
			echo "WITH_SDL_IMAGE=1" >> config.mak
		fi
	else
		echo "- sdl development libs not found: disabling"
		touch ../disable-sdl
	fi
	exit 0
fi

